@model Tarea1.Models.CategoriaProductos

@{
    ViewBag.Title = "MostrarModificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Modificar CategoriaProductos</h2>

<div class="row">
    <div class="col-lg-6">
        <form method="post" action="@Url.Action("GuardarModificar", "CategoriaProductos")">


            <div class="form-group">
                <label for="idCategoriaProductos">ID CategoriaProductos</label>
                <input type="number" name="idCategoriaProductos" class="form-control" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="@Model.Nombre" />
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        </form>

    </div>
</div>